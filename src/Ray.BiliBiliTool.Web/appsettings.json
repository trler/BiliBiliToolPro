        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.HttpLogging": "Warning",
        "System.Net.Http.HttpClient": "Warning",
        "Quartz.SQL": "Warning"
      }
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "Sqlite": "Data Source=./BiliBiliTool.db;Cache=Shared"
